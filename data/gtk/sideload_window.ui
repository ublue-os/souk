<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SkSideloadWindow" parent="AdwWindow">
    <property name="width_request">350</property>
    <property name="height_request">400</property>
    <property name="default_width">450</property>
    <property name="default_height">600</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkHeaderBar">
            <property name="show_title_buttons">False</property>
            <child>
              <object class="GtkButton" id="cancel_button">
                <property name="label" translatable="yes">Cancel</property>
                <property name="action-name">window.close</property>
              </object>
            </child>
            <child type="title">
              <object class="AdwWindowTitle" id="window_title">
                <property name="title">Souk</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="start_button">
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkStack" id="sideload_stack">
            <child>
              <object class="GtkStackPage">
                <property name="name">package-details</property>
                <property name="child">
                  <object class="AdwClamp">
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <child>
                          <object class="GtkBox">
                            <property name="spacing">6</property>
                            <child>
                              <object class="GtkImage" id="icon_image">
                                <property name="pixel_size">64</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox">
                                <child>
                                  <object class="GtkLabel" id="name_label">
                                    <style>
                                      <class name="title-2"/>
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkLabel" id="author_label"/>
                                </child>
                                <child>
                                  <object class="GtkLabel" id="version_label"/>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">loading</property>
                <property name="child">
                  <object class="GtkSpinner">
                    <property name="spinning">True</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">error</property>
                <property name="child">
                  <object class="AdwStatusPage" id="error_status_page">
                    <property name="vexpand">True</property>
                    <property name="icon_name">dialog-warning-symbolic</property>
                    <property name="title" translatable="yes">A problem has occurred</property>
                    <child>
                      <object class="GtkButton">
                        <property name="halign">center</property>
                        <property name="label" translatable="yes">Close</property>
                        <property name="action-name">window.close</property>
                        <style>
                          <class name="pill"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

