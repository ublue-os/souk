<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.22"/>
  <template class="SoukActionButton" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">2</property>
    <child>
      <object class="GtkStack" id="button_stack">
        <property name="transition-type">crossfade</property>
        <property name="width_request">150</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">install</property>
            <property name="child">
              <object class="GtkButton" id="install_button">
                <property name="label" translatable="yes">Install</property>
                <style>
                  <class name="suggested-action"/>
                  <class name="action-button"/>
                </style>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">installed</property>
            <property name="child">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkButton" id="open_button">
                    <property name="label" translatable="yes">Open</property>
                    <property name="hexpand">True</property>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkButton" id="uninstall_button">
                    <property name="icon_name">user-trash-symbolic</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">processing</property>
            <property name="child">
              <object class="GtkBox" id="cancel_box">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkButton" id="cancel_button">
                    <property name="label" translatable="yes">Cancel</property>
                    <property name="width_request">125</property>
                  </object>
                </child>
                <child>
                  <object class="GtkProgressBar" id="progressbar"/>
                </child>
                <style>
                  <class name="linked"/>
                  <class name="action-button-progress"/>
                </style>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">uninstalling</property>
            <property name="child">
              <object class="GtkButton">
                <property name="label" translatable="yes">Uninstallingâ€¦</property>
                <property name="sensitive">False</property>
                <style>
                  <class name="action-button"/>
                </style>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="status_label">
        <property name="halign">center</property>
        <property name="ellipsize">end</property>
        <property name="single_line_mode">True</property>
        <property name="max_width_chars">15</property>
        <property name="xalign">0</property>
        <attributes>
          <attribute name="scale" value="0.8"/>
          <attribute name="font-features" value="tnum=1"/>
        </attributes>
        <style>
          <class name="dim-label"/>
        </style>
      </object>
    </child>
  </template>
</interface>
